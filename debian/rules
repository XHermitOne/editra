#!/usr/bin/make -f
PACKAGE = $(shell dh_listpackages)
TMP     = $(CURDIR)/debian/$(PACKAGE)

%:
	dh $@

override_dh_auto_configure:
	find . -name '*\.pyc' -delete
	dh_auto_configure
	
override_dh_auto_install:
	dh_auto_install
	rm -f $(TMP)/usr/bin/Editra.pyw
	rm -f $(TMP)/usr/lib/python2.4/site-packages/Editra/pixmaps/theme/Tango/COPYING
	rm -f $(TMP)/usr/lib/python2.5/site-packages/Editra/pixmaps/theme/Tango/COPYING
	rm -f $(TMP)/usr/lib/python2.4/site-packages/Editra/COPYING
	rm -f $(TMP)/usr/lib/python2.5/site-packages/Editra/COPYING

override_dh_fixperms:
	dh_fixperms
	chmod +x $(TMP)/usr/share/pyshared/Editra/Editra
