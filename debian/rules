#!/usr/bin/make -f
PACKAGE = $(shell dh_listpackages)
TMP     = $(CURDIR)/debian/$(PACKAGE)

%:
	dh $@ --with python2

override_dh_fixperms:
	dh_fixperms
	rm -f $(TMP)/usr/share/pyshared/Editra/COPYING \
         $(TMP)/usr/share/pyshared/Editra/pixmaps/theme/Tango/COPYING \
         $(TMP)/usr/share/pyshared/Editra \ 
	      $(TMP)/usr/lib/python2.6/dist-packages/Editra
	      $(TMP)/usr/lib/python2.7/dist-packages/Editra/plugins/
	find . -name '*\.egg' -delete
